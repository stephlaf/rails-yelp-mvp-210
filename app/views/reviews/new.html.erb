<h1>Reviews#new</h1>

  <% if @review.errors.any? %>
    <% @review.errors.full_messages.each do |m| %>
      <%= m %>
    <% end %>
  <% end %>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: (0..5).to_a %>
  <%= f.submit "Do it!", class: 'btn btn-sm btn-success' %>
<% end %>

